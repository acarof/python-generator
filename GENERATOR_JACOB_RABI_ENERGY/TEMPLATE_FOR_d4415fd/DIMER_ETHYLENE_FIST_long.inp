# THERMODYNAMICS
@SET myENSEMBLE    NVE
@SET myTEMPERATURE 298

# TRAJECTORY
@SET mySTEPS      200000
@SET myTIMESTEP    0.5D0
@SET myPRINT       1

#SYSTEMS SIZE 
@SET myLBOX	   18.625
@SET myRCUT        9.3250D0
@SET myNATOMS      12
#@SET myNMOL        2

# EWALD PARAMETERS
@SET myGMAX        17
@SET myOSPLINE     6
@SET myALPHA       0.36460D0

&GLOBAL
  BLACS_GRID             SQUARE
  PREFERRED_FFT_LIBRARY  FFTW
  PRINT_LEVEL            LOW
  PROGRAM_NAME           CP2K
  PROJECT_NAME           ETHYLENE_DIMER
  RUN_TYPE               MD
&END GLOBAL
&MOTION
	&MD
     		ENSEMBLE      ${myENSEMBLE}
     		STEPS         ${mySTEPS}
   		TIMESTEP      ${myTIMESTEP}
     		TEMPERATURE   ${myTEMPERATURE}
   	&END MD
        &CONSTRAINT
             SHAKE_TOLERANCE    9.9999999999999982E-13
             ROLL_TOLERANCE     1.0000000000000000E-10
             CONSTRAINT_INIT  T
             &FIXED_ATOMS
               COMPONENTS_TO_FIX XYZ
               LIST    1  7
             &END FIXED_ATOMS
        &END CONSTRAINT
#   	&CONSTRAINT
#     		SHAKE_TOLERANCE     1.0E-12
#     		ROLL_TOLERANCE      1.0E-10
#     		CONSTRAINT_INIT     T
#     		&G3X3
#       			MOLECULE            1
#       			INTERMOLECULAR      F
#       			ATOMS               1              2              3
#			DISTANCES           1.890359170D0  1.8903591720D0 3.086920340D0
#     		&END G3X3
#   	&END CONSTRAINT
  	&PRINT
		&TRAJECTORY  LOW
       			FORMAT  XYZ
       			&EACH
         			MD          ${myPRINT}
       			&END EACH
     		&END TRAJECTORY
     		&VELOCITIES  LOW
       			FORMAT  XYZ
       			&EACH
         			MD          ${myPRINT}
       			&END EACH
     		&END VELOCITIES
     		&FORCES  LOW
       			FORMAT  XYZ
       			&EACH
         			MD          ${myPRINT}
       			&END EACH
     		&END FORCES
   	&END PRINT
&END MOTION
&FORCE_EVAL
	METHOD  FIST
	&MM
    		&FORCEFIELD
      			&SPLINE
        			RCUT_NB         ${myRCUT}
       			&END SPLINE
			@INCLUDE FF_ETHYLENES_SITE1.inc
		&END FORCEFIELD	
		&POISSON
       			&EWALD
         			EWALD_TYPE  EWALD
         			ALPHA        ${myALPHA}
         			GMAX         ${myGMAX}
         			O_SPLINE     ${myOSPLINE}
       			&END EWALD
     		&END POISSON
     		&PRINT
      			&ITER_INFO  SILENT
      			&END ITER_INFO
      				&PROGRAM_RUN_INFO LOW
        				&EACH
          					MD 1
        				&END EACH
      				&END PROGRAM_RUN_INFO
     			&END PRINT
   	&END MM
   	&SUBSYS
     		&CELL
       			ABC                    ${myLBOX}      ${myLBOX}      ${myLBOX}
       			PERIODIC  XYZ
       			MULTIPLE_UNIT_CELL     1              1              1
     		&END CELL
     		&COORD
     			@include COORD.init
     		&END COORD
     		&VELOCITY  
     			@include VELOC.init
     		&END VELOCITY
                &KIND C1
                        ELEMENT C
                &END KIND
                &KIND H
                        ELEMENT H
                &END KIND
                &KIND C2
                        ELEMENT C
                &END KIND
                &TOPOLOGY
                        NUMBER_OF_ATOMS                   ${myNATOMS}
                        CONN_FILE_FORMAT  MOL_SET
                        MULTIPLE_UNIT_CELL                1              1              1
                        &MOL_SET
                                &MOLECULE
                                        NMOL              1
                                        CONN_FILE_NAME    ./ethylene1.psf
                                        CONN_FILE_FORMAT  PSF
                                &END MOLECULE
                                &MOLECULE
                                        NMOL              1
                                        CONN_FILE_NAME    ./ethylene2.psf
                                        CONN_FILE_FORMAT  PSF
                                &END MOLECULE
                        &END MOL_SET
                &END TOPOLOGY
   	&END SUBSYS
&END FORCE_EVAL
